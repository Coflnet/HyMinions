extends ../layouts/default

block append variables
    - var currentPage = "abouts";

mixin modalBox(id,title,param)
    .modal.fade.infoBox(id=id tabindex="-1" role="dialog" aria-labelledby=id+"Label" aria-hidden="true")
        .modal-dialog(role="document").modal-lg
            .modal-content
                .modal-header
                    h3.modal-title(id=id+"Label")=title
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                .modal-body
                    if block 
                        block 
                    else
                        p Empty
                .modal-footer
                    button.btn.btn-secondary(type="button" data-dismiss="modal") Close

